@using FypEvaluationSystem.Models
@{
    ViewBag.Title = "DisplayForm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    List<StudentInfo> data = ViewBag.StuList;

}


<div class="container mb-3 mt-3 pt-4">
    <h2 class="mt-5">Evaluated Form</h2>

    <table id="mydatatable" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Group ID</th>
                <th>Student ID</th>
                <th>Student Name</th>
                <th>Student Email</th>
                <th>View</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var elem in data)
            {
                <tr>
                    <td>@elem.Group_id</td>
                    <td>@elem.Student_id</td>
                    <td>@elem.Student_name</td>
                    <td>@elem.Student_email</td>
                    <td><a href="/Admin/ViewStudentInfo?Student_id=@elem.Student_id" class="view-form" id=@elem.Student_id>view student</a></td>
                    @*<td>@Html.ActionLink("View Form", "FormDesignEval", "Admin", new { elem.Form_id, elem.Form_template_id})</td>*@
                </tr>
            }
        </tbody>


    </table>
</div>
