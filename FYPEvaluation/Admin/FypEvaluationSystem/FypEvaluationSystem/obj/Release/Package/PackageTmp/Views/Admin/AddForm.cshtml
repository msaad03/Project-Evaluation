                       new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Semester, "", new { @class = "text-danger" })
                </div>
            }
            else
            {

                <div class="form-group mt-2">
                    @Html.LabelFor(model => model.Semester)
                    @Html.DropDownListFor(model => model.Semester,
                       new SelectList(
                           new List<Object>{
                               new { value = "Fall" , text = "Fall"},
                               new { value = "Spring" , text = "Spring"},
                               new { value = "Summer" , text = "Summer"}



                            }, "value", "text", "false"),
                       new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Semester, "", new { @class = "text-danger" })
                </div>
            }
            @if (Model != null)
            {


                <div class="form-group mt-2">
                    @Html.LabelFor(model => model.Year)
                    @Html.TextBoxFor(model => model.Year, new { @class = "form-control", @placeholder = "Enter Year", value = Model.Year })
                    @Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger" })
                </div>
            }
            else
            {


                <div class="form-group mt-2">
                    @Html.LabelFor(model => model.Year)
                    @Html.TextBoxFor(model => model.Year, new { @class = "form-control", @placeholder = "Enter Year" })
                    @Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger" })
                </div>
            }
            @if (Model != null)
            {


                <div class="form-group mt-2">
                    @Html.LabelFor(model => model.TotalMarks)
                    @Html.TextBoxFor(model => model.TotalMarks, new { @class = "form-control", @placeholder = "Enter Form Weightage", value = Model.TotalMarks })
